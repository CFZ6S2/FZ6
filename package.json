{
  "name": "tucitasegura",
  "version": "1.0.0",
  "description": "TuCitaSegura - Premium Dating Platform",
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:firestore": "jest test/firestore-rules.test.js",
    "test:integration": "jest test/integration.test.js",
    "test:functions": "cd functions && npm test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "build:css": "tailwindcss -i ./src/input.css -o ./webapp/css/output.css --minify",
    "watch:css": "tailwindcss -i ./src/input.css -o ./webapp/css/output.css --watch",
    "serve": "python3 -m http.server 8000",
    "deploy:rules": "firebase deploy --only firestore:rules",
    "deploy:storage": "firebase deploy --only storage",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:hosting": "npm run build:css && firebase deploy --only hosting",
    "deploy:all": "npm run build:css && firebase deploy",
    "deploy:indexes": "firebase deploy --only firestore:indexes"
  },
  "keywords": [
    "dating",
    "firebase",
    "security",
    "premium"
  ],
  "author": "TuCitaSegura Team",
  "license": "UNLICENSED",
  "private": true,
  "devDependencies": {
    "@firebase/rules-unit-testing": "^2.0.7",
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.10",
    "autoprefixer": "^10.4.16",
    "jest": "^29.7.0",
    "nock": "^13.4.0",
    "postcss": "^8.4.32",
    "supertest": "^6.3.3",
    "tailwindcss": "^3.4.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "webapp/js/**/*.js",
      "functions/**/*.js",
      "!functions/node_modules/**",
      "!**/node_modules/**"
    ],
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testTimeout": 10000
  }
}
