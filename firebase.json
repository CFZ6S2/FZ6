{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "firebase-storage.rules"
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs20",
    "predeploy": [],
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "serviceAccountKey.json"
    ]
  },
  "hosting": {
    "site": "tucitasegura-129cc",
    "cleanUrls": true,
    "trailingSlash": false,
    "public": "webapp/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "functions/**",
      "backend/**",
      "src/**",
      "FZ6/**",
      "*.md",
      "firestore.rules",
      "firebase-storage.rules",
      "firestore.indexes.json",
      ".firebaserc",
      ".gitignore",
      "tailwind.config.js",
      "postcss.config.js"
    ],
    "rewrites": [
      {
        "source": "/health",
        "function": "apiHealth"
      },
      {
        "source": "/api/v1/auth/status",
        "function": "apiOptional"
      },
      {
        "source": "/api/v1/users/me",
        "function": "apiUserProfile"
      },
      {
        "source": "/api/files/upload/**",
        "function": "apiUpload"
      },
      {
        "source": "/api/v1/moderation/message",
        "function": "apiModerateMessage"
      },
      {
        "source": "/api/v1/**",
        "function": "apiProtected"
      }
    ],
    "redirects": [
      {
        "source": "/favicon.ico",
        "destination": "/favicon.svg",
        "type": 301
      },
      {
        "source": "/webapp/site.webmanifest",
        "destination": "/site.webmanifest",
        "type": 301
      },
      {
        "source": "/webapp/index.html",
        "destination": "/",
        "type": 301
      },
      {
        "source": "/webapp/login.html",
        "destination": "/login",
        "type": 301
      },
      {
        "source": "/webapp/register.html",
        "destination": "/register",
        "type": 301
      },
      {
        "source": "/webapp/perfil.html",
        "destination": "/perfil",
        "type": 301
      },
      {
        "source": "/webapp/buscar-usuarios.html",
        "destination": "/buscar-usuarios",
        "type": 301
      },
      {
        "source": "/webapp/conversaciones.html",
        "destination": "/conversaciones",
        "type": 301
      },
      {
        "source": "/webapp/cita-detalle.html",
        "destination": "/cita-detalle",
        "type": 301
      },
      {
        "source": "/webapp/eventos-vip.html",
        "destination": "/eventos-vip",
        "type": 301
      },
      {
        "source": "/webapp/evento-detalle.html",
        "destination": "/evento-detalle",
        "type": 301
      },
      {
        "source": "/webapp/seguridad.html",
        "destination": "/seguridad",
        "type": 301
      },
      {
        "source": "/webapp/seguro.html",
        "destination": "/seguro",
        "type": 301
      },
      {
        "source": "/webapp/suscripcion.html",
        "destination": "/suscripcion",
        "type": 301
      },
      {
        "source": "/webapp/cuenta-pagos.html",
        "destination": "/cuenta-pagos",
        "type": 301
      },
      {
        "source": "/webapp/admin.html",
        "destination": "/admin",
        "type": 301
      },
      {
        "source": "/webapp/admin-login.html",
        "destination": "/admin-login",
        "type": 301
      },
      {
        "source": "/webapp/verify-email.html",
        "destination": "/verify-email",
        "type": 301
      },
      {
        "source": "/webapp/verificacion-identidad.html",
        "destination": "/verificacion-identidad",
        "type": 301
      }
    ],
    "headers": [
      {
        "source": "**/*.@(jpg|jpeg|png|gif|svg|ico|woff|woff2|ttf|eot)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      },
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      },
      {
        "source": "**/*.@(html|json)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, no-store, must-revalidate"
          }
        ]
      },
      {
        "source": "service-worker.js",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, no-store, must-revalidate"
          }
        ]
      },
      {
        "source": "/assets/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      },
      {
        "source": "/api/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-store, no-cache, must-revalidate, proxy-revalidate"
          }
        ]
      },
      {
        "source": "**",
        "headers": [
          {
            "key": "Strict-Transport-Security",
            "value": "max-age=31536000; includeSubDomains; preload"
          },
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          },
          {
            "key": "Referrer-Policy",
            "value": "strict-origin-when-cross-origin"
          },
          {
            "key": "Permissions-Policy",
            "value": "geolocation=(self), camera=(), microphone=()"
          },
          {
            "key": "X-Frame-Options",
            "value": "DENY"
          },
          {
            "key": "Content-Security-Policy",
            "value": "default-src 'self'; script-src 'self' 'unsafe-inline' https://www.gstatic.com https://www.googletagmanager.com https://cdn.jsdelivr.net https://cdnjs.cloudflare.com https://cdn.tailwindcss.com https://www.google.com/recaptcha/ https://www.gstatic.com/recaptcha/ https://maps.googleapis.com https://apis.google.com https://www.paypal.com https://www.sandbox.paypal.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdnjs.cloudflare.com; font-src 'self' https://fonts.gstatic.com https://cdnjs.cloudflare.com data:; img-src 'self' data: https: blob: https://maps.googleapis.com https://maps.gstatic.com https://www.paypalobjects.com; media-src 'self' data: https:; connect-src 'self' https://cdn.jsdelivr.net https://www.gstatic.com https://*.googleapis.com https://*.firebaseio.com https://cdnjs.cloudflare.com https://translate.google.com https://translate.googleapis.com https://tucitasegura-backend-tlmpmnvyda-uc.a.run.app https://verifyrecaptcha-tlmpmnvyda-uc.a.run.app https://us-central1-tucitasegura-129cc.cloudfunctions.net https://tucitasegura-129cc.web.app https://identitytoolkit.googleapis.com https://securetoken.googleapis.com https://www.google.com/recaptcha/ https://www.google.com wss://*.firebaseio.com https://maps.googleapis.com data: https://www.paypal.com https://www.sandbox.paypal.com; frame-src 'self' https://www.google.com/recaptcha/ https://recaptcha.google.com/recaptcha/ https://tucitasegura-129cc.firebaseapp.com https://apis.google.com https://www.google.com https://www.paypal.com https://www.sandbox.paypal.com; frame-ancestors 'none'; object-src 'none'; base-uri 'self'; form-action 'self'; upgrade-insecure-requests"
          }
        ]
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5000
    },
    "storage": {
      "port": 9199
    },
    "ui": {
      "enabled": true
    }
  }
}