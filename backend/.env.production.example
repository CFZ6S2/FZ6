# TuCitaSegura - Production Environment Variables
# Copy this file to .env.production and fill with real values
# DO NOT commit .env.production to git!

# ==========================================
# FIREBASE CONFIGURATION
# ==========================================
FIREBASE_PROJECT_ID=tu-cita-segura
FIREBASE_PRIVATE_KEY_PATH=/etc/secrets/firebase-credentials.json

# Alternative: Use base64 encoded service account JSON
# Get from: Firebase Console → Project Settings → Service Accounts → Generate new private key
# Then: cat firebase-credentials.json | base64 -w 0
# FIREBASE_SERVICE_ACCOUNT_B64=<base64_encoded_service_account_json>

# ==========================================
# API CONFIGURATION
# ==========================================
ENVIRONMENT=production
API_VERSION=1.0.0
DEBUG=false
PORT=8000

# Generate with: openssl rand -hex 32
SECRET_KEY=<generate_32_byte_hex_key>

# ==========================================
# CORS CONFIGURATION
# ==========================================
# Comma-separated list of allowed origins
CORS_ORIGINS=https://tucitasegura.com,https://www.tucitasegura.com,https://api.tucitasegura.com

# ==========================================
# PAYPAL CONFIGURATION (PRODUCTION)
# ==========================================
# Get from: https://developer.paypal.com/dashboard/
PAYPAL_CLIENT_ID=<your_production_client_id>
PAYPAL_CLIENT_SECRET=<your_production_client_secret>
PAYPAL_MODE=live
PAYPAL_WEBHOOK_ID=<your_webhook_id>

# ==========================================
# RECAPTCHA CONFIGURATION
# ==========================================
# Get from: https://www.google.com/recaptcha/admin
RECAPTCHA_SECRET_KEY=<your_recaptcha_v3_secret_key>
RECAPTCHA_SITE_KEY=<your_recaptcha_v3_site_key>

# ==========================================
# ENCRYPTION
# ==========================================
# Generate with: python3 -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=<generate_fernet_key>

# ==========================================
# SENTRY (ERROR TRACKING)
# ==========================================
# Get from: https://sentry.io
SENTRY_DSN=https://xxxxx@oxxxxx.ingest.sentry.io/xxxxx

# ==========================================
# SECURITY
# ==========================================
ENABLE_CSRF=true
# Generate with: openssl rand -hex 32
CSRF_SECRET_KEY=<generate_32_byte_hex_key>

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_ENABLED=true

# ==========================================
# EMAIL CONFIGURATION (OPTIONAL)
# ==========================================
# If using custom SMTP server
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=noreply@tucitasegura.com
# SMTP_PASSWORD=<app_specific_password>
# SMTP_FROM=TuCitaSegura <noreply@tucitasegura.com>

# ==========================================
# MONITORING
# ==========================================
HEALTH_CHECK_CACHE_TTL=30

# ==========================================
# NOTES
# ==========================================
# 1. NEVER commit .env.production to git
# 2. Use strong, randomly generated keys
# 3. Rotate secrets regularly (monthly recommended)
# 4. Keep backups of .env.production in secure location
# 5. Use Railway/Railway CLI to set these variables
